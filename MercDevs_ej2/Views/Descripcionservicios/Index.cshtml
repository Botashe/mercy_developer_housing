@model IEnumerable<MercDevs_ej2.Models.Descripcionservicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Descripcion de Servicio</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-success">Crear Descripcion</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicioIdServicioNavigation)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicioIdServicioNavigation.IdServicio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDescServ"><button type="button" class="btn btn-outline-primary">Editar</button></a> 
                <a asp-action="Details" asp-route-id="@item.IdDescServ"><button type="button" class="btn btn-outline-warning">Detalles</button></a> 
                <a asp-action="Delete" asp-route-id="@item.IdDescServ"><button type="button" class="btn btn-outline-danger">Borrar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>

@await Html.PartialAsync("Logo_1")
